{
  "info": {
    "name": "RealtorAIGrowth",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Ingest CSV",
      "request": {
        "method": "POST",
        "header": [],
        "url": { "raw": "{{baseUrl}}/api/ingest", "host": ["{{baseUrl}}"], "path": ["api","ingest"] },
        "body": { "mode": "formdata", "formdata": [ { "key": "file", "type": "file", "src": ["public/sample.csv"] } ] }
      }
    },
    {
      "name": "Summarize",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "url": { "raw": "{{baseUrl}}/api/summarize", "host": ["{{baseUrl}}"], "path": ["api","summarize"] },
        "body": { "mode": "raw", "raw": "{\n  \"rows\": [],\n  \"subject_address\": \"123 Maple St\",\n  \"subject_sqft\": 1600\n}" }
      }
    },
    {
      "name": "PDF",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "url": { "raw": "{{baseUrl}}/api/pdf", "host": ["{{baseUrl}}"], "path": ["api","pdf"] },
        "body": { "mode": "raw", "raw": "{\n  \"subject\": \"123 Maple St\",\n  \"summary\": { \"suggested_price_range\": { \"low\": 345000, \"high\": 355000 }, \"rationale\": [], \"risks\": [], \"talking_points\": [] }\n}" }
      }
    },
    {
      "name": "Stripe Create Checkout",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "url": { "raw": "{{baseUrl}}/api/stripe/create", "host": ["{{baseUrl}}"], "path": ["api","stripe","create"] },
        "body": { "mode": "raw", "raw": "{\n  \"plan\": \"annual\"\n}" }
      }
    },
    {
      "name": "Stripe Webhook (dev only)",
      "request": {
        "method": "POST",
        "header": [ { "key": "stripe-signature", "value": "test" }, { "key": "Content-Type", "value": "application/json" } ],
        "url": { "raw": "{{baseUrl}}/api/stripe/webhook", "host": ["{{baseUrl}}"], "path": ["api","stripe","webhook"] },
        "body": { "mode": "raw", "raw": "{\n  \"type\": \"checkout.session.completed\",\n  \"data\": { \"object\": { \"client_reference_id\": \"00000000-0000-0000-0000-000000000001\" } }\n}" }
      }
    }
  ],
  "variable": [ { "key": "baseUrl", "value": "http://localhost:3000" } ]
}

